<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/animation_go_transition"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="go_transition"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Button"
            android:textAllCaps="false" />

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:background="?android:selectableItemBackground"
            android:text="selectableItemBackground"
            android:textAllCaps="false" />

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:text="selectableItemBackgroundBorderless"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="#fff"
            android:clickable="true"
            android:stateListAnimator="@drawable/elevation_selector"
            android:text="状态动画 高度" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <Button
                android:id="@+id/animaiton_show_reveal"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="显示" />

            <View
                android:id="@+id/animaiton_reveal_target"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_above="@+id/animaiton_show_reveal"
                android:layout_toRightOf="@+id/animaiton_show_reveal"
                android:background="#0094ff"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>